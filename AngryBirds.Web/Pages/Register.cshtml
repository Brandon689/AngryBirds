@page
@model AngryBirds.Web.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex justify-center items-center min-h-[calc(100vh-200px)]">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4">
            <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">@ViewData["Title"]</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
                <div class="mb-4">
                    <label asp-for="Input.Username" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Input.Username" class="shadow-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Input.Username" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Input.Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Input.Password" type="password" class="shadow-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="shadow-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>