@page
@model AngryBirds.Web.Pages.ProtectedDataModel
@{
    ViewData["Title"] = "Protected Data";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.ProtectedMessage))
{
    <div class="alert alert-success">
        <p>@Model.ProtectedMessage</p>
    </div>
}
else if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <p>@Model.ErrorMessage</p>
    </div>
}

<form method="post">
    <button type="submit" class="btn btn-primary" asp-page-handler="FetchData">Fetch Protected Data</button>
</form>