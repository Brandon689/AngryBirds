@page
@model AngryBirds.Web.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<h1 class="text-3xl font-bold mb-6">@ViewData["Title"]</h1>

@if (Model.LogoutSuccessful)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">You have been successfully logged out.</span>
    </div>
}

<form method="post" class="mb-4">
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        Logout
    </button>
</form>

<a asp-page="/Index" class="inline-block bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
    Return to Home
</a>