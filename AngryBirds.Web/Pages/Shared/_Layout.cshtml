@using AngryBirds.Web.Extensions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AngryBirds.Web</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'sans': ['Roboto', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AngryBirds.Web.styles.css" asp-append-version="true" />
</head>
<body class="flex flex-col min-h-screen bg-gray-100 font-sans">
    <header class="bg-blue-600 shadow-md">
        <nav class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <a class="text-xl font-medium text-white" asp-area="" asp-page="/Index">AngryBirds.Web</a>
                <div class="hidden md:flex md:items-center md:w-auto" id="navbarMenu">
                    <ul class="flex flex-row list-none md:ml-auto">
                        <li class="nav-item">
                            <a class="px-3 py-2 flex items-center text-sm font-medium text-white hover:bg-blue-700 rounded" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (!Context.IsUserLoggedIn())
                        {
                            <li class="nav-item">
                                <a class="px-3 py-2 flex items-center text-sm font-medium text-white hover:bg-blue-700 rounded" asp-area="" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="px-3 py-2 flex items-center text-sm font-medium text-white hover:bg-blue-700 rounded" asp-area="" asp-page="/Register">Register</a>
                            </li>
                        }
                        @if (Context.IsUserLoggedIn())
                        {
                            <li class="nav-item">
                                <a class="px-3 py-2 flex items-center text-sm font-medium text-white hover:bg-blue-700 rounded" asp-area="" asp-page="/ProtectedData">Protected Data</a>
                            </li>
                            <li class="nav-item">
                                <a class="px-3 py-2 flex items-center text-sm font-medium text-white hover:bg-blue-700 rounded" asp-area="" asp-page="/Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container mx-auto px-4 py-8 flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-gray-200">
        <div class="container mx-auto px-4 py-6 text-center text-gray-600">
            <p>&copy; 2024 - Brandon689</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>